= form_for @link do |f|
  -if @link.errors.any?
    #error_explanation
      %h2= "#{pluralize(@link.errors.count, "error")} prohibited this link from being saved:"
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :identifier
    = f.text_field :identifier
  .actions
    = f.submit 'Save'
